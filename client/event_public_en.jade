doctype
html
  head
    title Cozy - Calendar
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width,initial-scale=1.0")
    script(src="javascripts/modernizr-2.6.1.js")
    link(rel="stylesheet", href="../stylesheets/app.css")

  body.public
    #container.container.public-event-container.well
      h4 Would you be there?
      h2 #{event.description}
        if event.place != null && event.place.length != 0
          &nbsp;(#{event.place})
      h3 On #{date}

      if visitor.status == 'NEEDS-ACTION'

        p: a.btn(href="?status=ACCEPTED&key=" + key) Yes
        p: a.btn(href="?status=DECLINED&key=" + key) No

      else if visitor.status == 'ACCEPTED'
        p
            | You declared you will participage to this event.
        p: a(href="#{event.id}/file.ics?key=" + key) Download this event
        p
            a.btn(href="?status=DECLINED&key=" + key)
                | Decline the invitation

      else
        p
            | You declared you won't participate to this event.
        p
            a.btn(href="?status=ACCEPTED&key=" + key)
                | Accept the invitation
